{
	"name": "ux-sitemap-visualizer",
	"version": "0.1.0",
	"description": "A web-based tool that transforms text-based tree structures into visual hierarchical layouts for UX/product design documentation",
	"main": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "vite",
		"start": "vite",
		"test": "bunx jest",
		"test:watch": "bunx jest --watch",
		"test:coverage": "bunx jest --coverage",
		"lint": "eslint src --ext .ts,.tsx",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write .",
		"smoke:qc": "bun run test && bun run lint && bun run typecheck && bun run format && bun run build"
	},
	"keywords": [
		"sitemap",
		"tree",
		"visualization",
		"ux",
		"design",
		"parser",
		"hierarchy"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@babel/preset-env": "^7.28.5",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.23",
		"babel-jest": "^30.2.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-formatter-compact": "^9.0.1",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.4",
		"prettier-plugin-organize-attributes": "^1.0.0",
		"prettier-plugin-sort-json": "^4.1.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.18",
		"ts-jest": "^29.4.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vite": "^7.3.0"
	},
	"engines": {
		"bun": ">=1.1.30"
	},
	"dependencies": {
		"@types/d3": "^7.4.3",
		"d3": "^7.9.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3"
	}
}
